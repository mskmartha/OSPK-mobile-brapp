<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pickListCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/topBarShell"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height"
                android:background="@color/shimmer_loading_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/cardDetailsShell"
                android:layout_width="270dp"
                android:layout_height="269dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/drawable_radius_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topBarShell" />

            <View
                android:id="@+id/upcShell"
                android:layout_width="254dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_loading_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardDetailsShell" />

            <View
                android:layout_width="142dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_loading_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upcShell" />

            <View
                android:layout_width="142dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_loading_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upcShell" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>