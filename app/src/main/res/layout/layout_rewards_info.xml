<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="title"
            type="java.lang.String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFirstStar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_badges"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFirstStar"
            style="@style/PopinsMedium16.DarkBrown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{title}"
            tools:text="@string/handoff_complete"
            app:layout_constraintEnd_toEndOf="@+id/ivFirstStar"
            app:layout_constraintStart_toStartOf="@+id/ivFirstStar"
            app:layout_constraintTop_toBottomOf="@+id/ivFirstStar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>