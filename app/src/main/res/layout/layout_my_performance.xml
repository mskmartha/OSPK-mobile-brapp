<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.albertsons.acupick.R" />
        <variable
            name="viewModel"
            type="com.albertsons.acupick.ui.my_score.MyScoreViewModel" />

        <variable
            name="fragmentViewLifecycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/score_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_performance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Performance summary"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Date Range Subtitle -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:todayAsDateRange="@{true}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_performance_title"
                tools:text="Jan 1 - Today" />

            <!-- Total Points Section -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_earned_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="You earned total"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_range" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_total_points_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:localImageRes="@{R.drawable.ic_my_score_icon}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_earned_total_label"
                tools:srcCompat="@tools:sample/avatars" /> <!-- Replace with your gem icon -->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_total_points_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:totalPointsText="@{viewModel.gamesPointsData}"
                app:layout_constraintBottom_toBottomOf="@id/iv_total_points_icon"
                app:layout_constraintStart_toEndOf="@id/iv_total_points_icon"
                app:layout_constraintTop_toTopOf="@id/iv_total_points_icon"
                tools:text="624" />
            <LinearLayout
                android:id="@+id/stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_total_points_icon">

                <!-- Base Points Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_stat_label_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:getLabelForStat="@{viewModel.gamesPointsData}"
                        app:performanceType="@{1}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <ImageView
                            android:id="@+id/iv_stat_icon_base"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:localImageRes="@{R.drawable.ic_base_point}"/>

                        <TextView
                            android:id="@+id/tv_stat_value_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:getValueForStat="@{viewModel.gamesPointsData}"
                            app:performanceType="@{1}"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- OTH Points Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_stat_label_oth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:getLabelForStat="@{viewModel.gamesPointsData}"
                        app:performanceType="@{2}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <ImageView
                            android:id="@+id/iv_stat_icon_oth"
                            android:layout_width="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="20dp"
                            app:localImageRes="@{R.drawable.ic_group_1000003079}"/>

                        <TextView
                            android:id="@+id/tv_stat_value_oth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:getValueForStat="@{viewModel.gamesPointsData}"
                            app:performanceType="@{2}"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Store OTH Points Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_stat_label_store_oth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:getLabelForStat="@{viewModel.gamesPointsData}"
                        app:performanceType="@{3}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <ImageView
                            android:id="@+id/iv_stat_icon_store_oth"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:localImageRes="@{R.drawable.ic_group_1000003078}"/>

                        <TextView
                            android:id="@+id/tv_stat_value_store_oth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:getValueForStat="@{viewModel.gamesPointsData}"
                            app:performanceType="@{3}"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
