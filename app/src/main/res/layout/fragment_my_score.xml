<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="com.albertsons.acupick.R"/>
        <variable
            name="viewModel"
            type="com.albertsons.acupick.ui.my_score.MyScoreViewModel" />
    </data>


       <androidx.core.widget.NestedScrollView
           visibilityGoneIfTrue="@{viewModel.isDataLoading}"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingHorizontal="15dp"
               android:paddingVertical="10dp">


               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/lblHeading1"
                   style="@style/NunitoSansBold20.Black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/nunito_sans_black"
                   android:text="@string/every_effort_counts"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/lblHeading2"
                   style="@style/NunitoSansBold20.Black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/your_score_is_combined_from"
                   android:textAlignment="center"
                   android:textSize="14sp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/lblHeading1" />

               <LinearLayout
                   android:id="@+id/llIncluded"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/lblHeading2">

                 <include
                       layout="@layout/layout_score_types_view"
                       app:description="@{@string/lbl_basic_points_info}"
                       app:itemEnd="@{@drawable/baseline_add_24}"
                       app:itemIcon="@{@drawable/ic_basepoints}"
                       app:itemType="@{viewModel.BASE_POINTS}"
                       app:title="@{@string/lbl_basic_points}"
                       app:viewModel="@{viewModel}" />

                   <include
                       layout="@layout/layout_score_types_view"
                       app:description="@{@string/lbl_oth5_info}"
                       app:itemEnd="@{@drawable/baseline_add_24}"
                       app:itemIcon="@{@drawable/user_oth5}"
                       app:itemType="@{viewModel.OTH_RULE}"
                       app:title="@{@string/lbl_basic_oth5}"
                       app:viewModel="@{viewModel}" />


                   <include
                       layout="@layout/layout_score_types_view"
                       app:description="@{@string/lbl_store_oth5_info}"
                       app:itemEnd="@{@drawable/ic_equals}"
                       app:itemIcon="@{@drawable/store_oth5}"
                       app:itemType="@{viewModel.OTH_STORE}"
                       app:title="@{@string/lbl_basic_store_oth5}"
                       app:viewModel="@{viewModel}" />
               </LinearLayout>

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/lblHeading3"
                   android:layout_marginTop="20dp"
                   style="@style/NunitoSansBold20.Black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/nunito_sans_black"
                   android:text="@string/lbl_top_to_win"
                   android:textAlignment="center"
                   android:textColor="@color/black"
                   android:textSize="24sp"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="@+id/llIncluded"
                   app:layout_constraintStart_toStartOf="@+id/llIncluded"
                   app:layout_constraintTop_toBottomOf="@+id/llIncluded" />

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/lblHeading4"
                   style="@style/NunitoSansBold20.Black"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/lbl_here_rewards"
                   android:textAlignment="center"
                   android:textSize="14sp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/lblHeading3" />


               <LinearLayout

                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/lblHeading4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <ImageView
                       android:id="@+id/ivHeader"
                       android:layout_width="100dp"
                       android:elevation="10dp"
                       android:src="@drawable/win_cup"
                       android:layout_gravity="center_horizontal"
                       android:layout_height="100dp"/>

                   <com.google.android.material.card.MaterialCardView
                       android:id="@+id/materialCardView"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-50dp"
                       app:cardCornerRadius="10dp"
                       app:cardElevation="0dp">

                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@color/score_card"
                           android:paddingHorizontal="10dp"
                           android:paddingTop="60dp"
                           android:paddingBottom="10dp">


                           <androidx.appcompat.widget.AppCompatTextView
                               android:id="@+id/tvPriceWining1"
                               style="@style/NunitoSansRegular10"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/_50_gift_card"
                               android:textAlignment="center"
                               android:textSize="14sp"
                               android:textStyle="bold"
                               android:textColor="@color/black"
                               app:layout_constraintEnd_toStartOf="@+id/guideline7"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toTopOf="parent" />

                           <TextView
                               android:id="@+id/tvFirstPriceLbl"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/bg_first_price"
                               android:paddingHorizontal="15dp"
                               android:paddingVertical="3dp"
                               android:text="1st"
                               android:layout_marginTop="10dp"
                               app:layout_constraintEnd_toEndOf="@+id/tvPriceWining1"
                               app:layout_constraintStart_toStartOf="@+id/tvPriceWining1"
                               app:layout_constraintTop_toBottomOf="@+id/tvPriceWining1" />

                           <androidx.constraintlayout.widget.Guideline
                               android:id="@+id/guideline7"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               app:layout_constraintGuide_percent=".33" />

                           <androidx.appcompat.widget.AppCompatTextView
                               android:id="@+id/tvPriceWining2"
                               style="@style/NunitoSansRegular10"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/_25_gift_card"
                               android:textAlignment="center"
                               android:textColor="@color/black"
                               android:textSize="14sp"
                               android:textStyle="bold"
                               app:layout_constraintEnd_toStartOf="@+id/guideline6"
                               app:layout_constraintStart_toEndOf="@+id/tvPriceWining1"
                               app:layout_constraintTop_toTopOf="parent" />

                           <TextView
                               android:id="@+id/tvSecondPriceLbl"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/bg_second_price"
                               android:paddingHorizontal="15dp"
                               android:paddingVertical="3dp"
                               android:text="2nd"
                               android:layout_marginTop="10dp"
                               app:layout_constraintEnd_toEndOf="@+id/tvPriceWining2"
                               app:layout_constraintStart_toStartOf="@+id/tvPriceWining2"
                               app:layout_constraintTop_toBottomOf="@+id/tvPriceWining2" />

                           <androidx.constraintlayout.widget.Guideline
                               android:id="@+id/guideline6"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               app:layout_constraintGuide_percent=".66" />

                           <androidx.appcompat.widget.AppCompatTextView
                               android:id="@+id/tvPriceWining3"
                               style="@style/NunitoSansRegular10"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/_10_gift_card"
                               android:textAlignment="center"
                               android:textColor="@color/black"
                               android:textSize="14sp"
                               android:textStyle="bold"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintStart_toEndOf="@+id/tvPriceWining2"
                               app:layout_constraintTop_toTopOf="parent" />

                           <TextView
                               android:id="@+id/tvThirdPriceLbl"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@drawable/bg_third_price"
                               android:paddingHorizontal="15dp"
                               android:paddingVertical="3dp"
                               android:text="3rd"
                               android:layout_marginTop="10dp"
                               app:layout_constraintEnd_toEndOf="@+id/tvPriceWining3"
                               app:layout_constraintStart_toStartOf="@+id/tvPriceWining3"
                               app:layout_constraintTop_toBottomOf="@+id/tvPriceWining3" />

                       </androidx.constraintlayout.widget.ConstraintLayout>
                   </com.google.android.material.card.MaterialCardView>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/tvLblNote"
                       style="@style/NunitoSansRegular10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="start"
                       android:text="@string/lbl_note_work"
                       android:layout_marginHorizontal="10dp"
                       android:textColor="@color/black"
                       android:textSize="12sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/lblHeading2" />

               </LinearLayout>
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.core.widget.NestedScrollView>


</layout>
