<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/lightCoffeeGray" /> <!-- A light gray color for the background -->
        </shape>
    </item>

    <!-- Progress shape -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="#2196F3" /> <!-- A blue color for the progress -->
            </shape>
        </clip>
    </item>

</layer-list>
