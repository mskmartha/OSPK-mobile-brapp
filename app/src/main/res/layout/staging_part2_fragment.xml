<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pagerVm"
            type="com.albertsons.acupick.ui.staging.StagingPart2PagerViewModel" />

        <variable
            name="viewModel"
            type="com.albertsons.acupick.ui.staging.StagingPart2ViewModel" />

        <variable
            name="fragmentViewLifecycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.albertsons.acupick.ui.custom.StickyScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/orderInfo"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shortOrderNumber"
                        style="@style/NunitoSansBold20.grey600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        android:includeFontPadding="false"
                        android:text="@{viewModel.activity.shortOrderId}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="DUG08" />

                    <View
                        android:id="@+id/viewDivider"
                        android:layout_width="1dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/grey_550"
                        app:layout_constraintBottom_toBottomOf="@+id/shortOrderNumber"
                        app:layout_constraintStart_toEndOf="@+id/shortOrderNumber"
                        app:layout_constraintTop_toTopOf="@+id/shortOrderNumber" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/headerOrderNumber"
                        style="@style/NunitoSansBold20.grey600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:includeFontPadding="false"
                        android:text="@{`#` + viewModel.activity.customerOrderNumber}"
                        app:layout_constraintStart_toEndOf="@id/viewDivider"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="10042145" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/headerCustomerName"
                        style="@style/NunitoSansSemiBold16.grey700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingStart="16dp"
                        android:paddingEnd="0dp"
                        android:text="@{viewModel.activity.customerName}"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@+id/noBagPreferenceIcon"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shortOrderNumber"
                        tools:text="Richard Carter" />

                    <ImageView
                        android:id="@+id/noBagPreferenceIcon"
                        visibilityGoneIfTrue="@{viewModel.isCustomerPreferBag}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_no_bags"
                        app:layout_constraintBottom_toBottomOf="@+id/headerCustomerName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/headerCustomerName"
                        app:layout_constraintTop_toTopOf="@+id/headerCustomerName" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--  Chilled -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chilledBanner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/coffeeLighter"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/orderInfo"
                    app:visibilityGoneIfTrue="@{viewModel.chTotalCount == 0}">

                    <ImageView
                        android:id="@+id/chilledImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_chilled"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansBold16.grey700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/chilled_staging"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/chilledImg"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansSemiBold12.grey550"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:bagOrToteScannedCount="@{viewModel.chBagOrToteScannedCount}"
                        app:bagOrToteTotalCount="@{viewModel.chBagOrToteTotalCount}"
                        app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                        app:isMultiSource="@{viewModel.isMultiSource}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:looseScannedCount="@{viewModel.chLooseScannedCount}"
                        app:looseTotalCount="@{viewModel.chLooseTotalCount}"
                        tools:text="0/3 Bags | 0/1 Loose item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chilledMaterialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/warm_background"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chilledBanner"
                    app:strokeColor="@color/doveLight"
                    app:strokeWidth="1dp"
                    app:visibilityGoneIfTrue="@{viewModel.chTotalCount == 0 || viewModel.chScannedZoneLocationsCount == 0 || viewModel.chZoneHasNewLocation}"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_info"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/ic_info" />

                        <TextView
                            android:id="@+id/message"
                            style="@style/NunitoSansRegular14.Grey700"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:lineSpacingExtra="2sp"
                            app:scannedZoneLocations="@{viewModel.chScannedZoneLocations}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/image"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Existing Location: CHA01, CHA02" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationLabelChilled"
                    style="@style/NunitoSansSemiBold12.grey550"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.locationLabel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chilledMaterialCardView"
                    app:visibilityGoneIfTrue="@{viewModel.chTotalCount == 0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chilledEmptyState"
                    style="@style/NunitoSansRegular16.grey700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/scan_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelChilled"
                    app:visibilityGoneIfTrue="@{viewModel.chTotalCount == 0|| viewModel.chZoneBagCounts.size() > 0}"
                    tools:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chilledRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelChilled"
                    app:zoneBagCounts="@{viewModel.chZoneBagCounts}"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_zone_bag_count" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/chilledBarrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="chilledEmptyState,chilledRv" />

                <!--  Frozen -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frozenBanner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/coffeeLighter"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chilledBarrier"
                    app:visibilityGoneIfTrue="@{viewModel.fzTotalCount == 0}">

                    <ImageView
                        android:id="@+id/frozenImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_frozen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansBold16.grey700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/frozen_staging"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/frozenImg"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansSemiBold12.grey550"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:bagOrToteScannedCount="@{viewModel.fzBagOrToteScannedCount}"
                        app:bagOrToteTotalCount="@{viewModel.fzBagOrToteTotalCount}"
                        app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                        app:isMultiSource="@{viewModel.isMultiSource}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:looseScannedCount="@{viewModel.fzLooseScannedCount}"
                        app:looseTotalCount="@{viewModel.fzLooseTotalCount}"
                        tools:text="0/3 Bags | 0/1 Loose item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/frozenMaterialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/warm_background"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frozenBanner"
                    app:strokeColor="@color/doveLight"
                    app:strokeWidth="1dp"
                    app:visibilityGoneIfTrue="@{viewModel.fzTotalCount == 0 || viewModel.fzScannedZoneLocationsCount == 0 || viewModel.fzZoneHasNewLocation}"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/fz_image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_info"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/ic_info" />

                        <TextView
                            android:id="@+id/fz_message"
                            style="@style/NunitoSansRegular14.Grey700"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:lineSpacingExtra="2sp"
                            app:scannedZoneLocations="@{viewModel.fzScannedZoneLocations}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/fz_image"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Existing Location: FZ01, FZ02" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationLabelFrozen"
                    style="@style/NunitoSansSemiBold12.grey550"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.locationLabel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frozenMaterialCardView"
                    app:visibilityGoneIfTrue="@{viewModel.fzTotalCount == 0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/frozenEmptyState"
                    style="@style/NunitoSansRegular16.grey700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/scan_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelFrozen"
                    app:visibilityGoneIfTrue="@{viewModel.fzTotalCount == 0 || viewModel.fzZoneBagCounts.size() > 0}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/frozenRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelFrozen"
                    app:zoneBagCounts="@{viewModel.fzZoneBagCounts}"
                    tools:itemCount="0"
                    tools:listitem="@layout/item_zone_bag_count" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/frozenBarrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="frozenEmptyState,frozenRv" />

                <!--  Ambient -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ambientBanner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/coffeeLighter"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frozenBarrier"
                    app:visibilityGoneIfTrue="@{viewModel.amTotalCount == 0}">

                    <ImageView
                        android:id="@+id/ambientImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_ambient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansBold16.grey700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/ambient_staging"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ambientImg"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansSemiBold12.grey550"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:bagOrToteScannedCount="@{viewModel.amBagOrToteScannedCount}"
                        app:bagOrToteTotalCount="@{viewModel.amBagOrToteTotalCount}"
                        app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                        app:isMultiSource="@{viewModel.isMultiSource}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:looseScannedCount="@{viewModel.amLooseScannedCount}"
                        app:looseTotalCount="@{viewModel.amLooseTotalCount}"
                        tools:text="0/3 Bags | 0/1 Loose item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ambientMaterialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/warm_background"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ambientBanner"
                    app:strokeColor="@color/doveLight"
                    app:strokeWidth="1dp"
                    app:visibilityGoneIfTrue="@{viewModel.amTotalCount == 0 || viewModel.amScannedZoneLocationsCount == 0 || viewModel.amZoneHasNewLocation}"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/amb_image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_info"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/ic_info" />

                        <TextView
                            android:id="@+id/amb_message"
                            style="@style/NunitoSansRegular14.Grey700"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:lineSpacingExtra="2sp"
                            app:scannedZoneLocations="@{viewModel.amScannedZoneLocations}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/amb_image"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Existing Location: AMB01, AMB02" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationLabelAmbient"
                    style="@style/NunitoSansSemiBold12.grey550"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.locationLabel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ambientMaterialCardView"
                    app:visibilityGoneIfTrue="@{viewModel.amTotalCount == 0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ambientEmptyState"
                    style="@style/NunitoSansRegular16.grey700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/scan_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelAmbient"
                    app:visibilityGoneIfTrue="@{viewModel.amTotalCount == 0 || viewModel.amZoneBagCounts.size() > 0}"
                    tools:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ambientRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelAmbient"
                    app:zoneBagCounts="@{viewModel.amZoneBagCounts}"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_zone_bag_count" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/ambientBarrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="ambientEmptyState,ambientRv" />

                <!--  Hot -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/hotBanner"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/coffeeLighter"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ambientBarrier"
                    app:visibilityGoneIfTrue="@{viewModel.htTotalCount == 0}">

                    <ImageView
                        android:id="@+id/hotImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_hot"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansBold16.grey700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/hot_staging"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/hotImg"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/NunitoSansSemiBold12.grey550"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:bagOrToteScannedCount="@{viewModel.htBagOrToteScannedCount}"
                        app:bagOrToteTotalCount="@{viewModel.htBagOrToteTotalCount}"
                        app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                        app:isMultiSource="@{viewModel.isMultiSource}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:looseScannedCount="@{viewModel.htLooseScannedCount}"
                        app:looseTotalCount="@{viewModel.htLooseTotalCount}"
                        tools:text="0/3 Bags | 0/1 Loose item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/hotMaterialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/warm_background"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hotBanner"
                    app:strokeColor="@color/doveLight"
                    app:strokeWidth="1dp"
                    app:visibilityGoneIfTrue="@{viewModel.htTotalCount == 0 || viewModel.htScannedZoneLocationsCount == 0 || viewModel.htZoneHasNewLocation}"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ht_image"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_info"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@drawable/ic_info" />

                        <TextView
                            android:id="@+id/ht_message"
                            style="@style/NunitoSansRegular14.Grey700"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:lineSpacingExtra="2sp"
                            app:scannedZoneLocations="@{viewModel.htScannedZoneLocations}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ht_image"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Existing Location: HT01, HT02" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationLabelHot"
                    style="@style/NunitoSansSemiBold12.grey550"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.locationLabel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hotMaterialCardView"
                    app:visibilityGoneIfTrue="@{viewModel.htTotalCount == 0}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hotEmptyState"
                    style="@style/NunitoSansRegular16.grey700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/scan_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelHot"
                    app:visibilityGoneIfTrue="@{viewModel.htTotalCount == 0 || viewModel.htZoneBagCounts.size() > 0}"
                    tools:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hotRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    app:isCustomerPreferBag="@{viewModel.isCustomerPreferBag}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/locationLabelHot"
                    app:zoneBagCounts="@{viewModel.htZoneBagCounts}"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_zone_bag_count" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrierZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="chilledBanner,chilledRv,chilledEmptyState,frozenBanner,frozenRv,frozenEmptyState,ambientBanner,ambientRv,ambientEmptyState,hotBanner,hotRv,hotEmptyState" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/completeButton"
                    style="@style/ButtonPrimary"
                    android:layout_width="264dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="24dp"
                    android:onClick="@{() -> pagerVm.onCompleteClicked(viewModel.activity.customerOrderNumber)}"
                    app:customerOrderNumber="@{viewModel.activity.customerOrderNumber}"
                    app:isCompleteList="@{pagerVm.isCompleteList}"
                    app:lastTabOrderNumber="@{pagerVm.lastTabOrderNumber}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barrierZone"
                    app:layout_constraintVertical_bias="0"
                    tools:text="@string/complete_stage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.albertsons.acupick.ui.custom.StickyScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
