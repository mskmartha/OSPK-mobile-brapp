<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemType"
            type="java.lang.String" />


        <variable
            name="itemIcon"
            type="android.graphics.drawable.Drawable" />
        
        <variable
            name="itemEnd"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="title"
            type="java.lang.String" />

        <variable
            name="description"
            type="java.lang.String" />

        <variable
            name="viewModel"
            type="com.albertsons.acupick.ui.how_to_win.HowToWinViewModel"/>

        <variable
            name="fragmentViewLifecycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />
   </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@{itemIcon}" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:src="@drawable/gold_star"
                android:elevation="10dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/score_card"
                android:paddingHorizontal="10dp"
                android:paddingTop="50dp"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblHeading2"
                    style="@style/NunitoSansBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@{title}"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblDescription"
                    style="@style/NunitoSansRegular10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{description}"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblHeading2" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAwards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    app:setViewModel="@{viewModel}"
                    app:setItems="@{viewModel.basePoints}"
                    app:fragmentViewLifecycleOwner="@{fragmentViewLifecycleOwner}"
                    app:itemViewType="@{itemType}"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/ivEndLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@{itemEnd}"
            android:layout_marginBottom="5dp"
            tools:src="@drawable/baseline_add_24" />

    </LinearLayout>
</layout>