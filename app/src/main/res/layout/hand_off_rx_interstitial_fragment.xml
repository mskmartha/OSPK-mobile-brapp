               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/troubleMessages"
                   style="@style/NunitoSansSemiBoldItalic20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="24dp"
                   android:layout_marginTop="24dp"
                   android:gravity="center"
                   android:text="@string/interstitial_reconnect_wifi"
                   app:layout_constraintTop_toBottomOf="@+id/waitTime"
                   app:visibilityGoneIfFalse="@{viewModel.isShowingTroubleMessage}"
                   tools:visibility="visible" />

               <androidx.appcompat.widget.AppCompatTextView
                   android:id="@+id/backToHomeButton"
                   style="@style/ButtonPrimary"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="48dp"
                   android:layout_marginEnd="48dp"
                   android:layout_marginBottom="24dp"
                   android:enabled="@{viewModel.isBackToHomeButtonEnable}"
                   android:onClick="@{() -> viewModel.navigateToPrescriptionFragmentOrHome()}"
                   android:padding="10dp"
                   android:text="@{isHandOffActionCancel ? @string/rx_dug_code_continue_positive_button : @string/back_to_home}"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent" />
           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/handOffLayout"
               visibilityGoneIfFalse="@{viewModel.showCompleteWithException}"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/white"
               app:layout_constraintTop_toTopOf="parent"
               tools:visibility="visible">

               <ImageView
                   android:id="@+id/pharmacyIcon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="24dp"
                   android:importantForAccessibility="no"
                   android:src="@drawable/pharmacy1"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/statusTitle"
                   style="@style/PopinsBold30.DarkBrown"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:gravity="center"
                   android:text="@string/lbl_hand_off_lbl_1"
                   app:layout_constraintTop_toBottomOf="@id/pharmacyIcon"
                   tools:text="@string/lbl_hand_off_lbl_1" />

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/statusMessage"
                   style="@style/PopinsBold16"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="24dp"
                   android:layout_marginStart="40dp"
                   android:layout_marginEnd="40dp"
                   android:gravity="center"
                   android:text="@string/lbl_hand_off_lbl_2"
                   android:textColor="@color/darkBrown"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/statusTitle"
                   tools:text="@string/lbl_hand_off_lbl_2" />

               <androidx.constraintlayout.widget.Guideline
                   android:id="@+id/gl1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintGuide_percent=".33" />

               <androidx.constraintlayout.widget.Guideline
                   android:id="@+id/gl2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintGuide_percent=".66" />

               <ImageView
                   android:id="@+id/ivFirstStar"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginTop="10dp"

                   android:src="@drawable/gold_star"
                   app:layout_constraintEnd_toStartOf="@+id/gl1"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/statusMessage" />

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvFirstStar"
                   style="@style/PopinsMedium16.DarkBrown"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="@string/handoff_complete"
                   app:layout_constraintEnd_toEndOf="@+id/ivFirstStar"
                   app:layout_constraintStart_toStartOf="@+id/ivFirstStar"
                   app:layout_constraintTop_toBottomOf="@+id/ivFirstStar" />

               <ImageView
                   android:id="@+id/ivSecondStar"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/gold_star"
                   app:layout_constraintEnd_toStartOf="@+id/gl2"
                   app:layout_constraintStart_toStartOf="@+id/gl1"
                   app:layout_constraintTop_toBottomOf="@+id/statusMessage" />

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvSecondStar"
                   style="@style/PopinsMedium16.DarkBrown"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="@string/collect_all_items"
                   app:layout_constraintEnd_toEndOf="@+id/ivSecondStar"
                   app:layout_constraintStart_toStartOf="@+id/ivSecondStar"
                   app:layout_constraintTop_toBottomOf="@+id/ivFirstStar" />

               <ImageView
                   android:id="@+id/ivThirdStar"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/gold_star"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="@+id/gl2"
                   app:layout_constraintTop_toBottomOf="@+id/statusMessage" />

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvThirdStar"
                   style="@style/PopinsMedium16.DarkBrown"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="@string/collect_auth_code"
                   app:layout_constraintEnd_toEndOf="@+id/ivThirdStar"
                   app:layout_constraintStart_toStartOf="@+id/ivThirdStar"
                   app:layout_constraintTop_toBottomOf="@+id/ivFirstStar" />


               <LinearLayout
                    android:id="@+id/lTotalPoints"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginHorizontal="20dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tvSecondStar">

                   <ImageView
                       android:id="@+id/ivHeader"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_gravity="center_horizontal"
                       android:elevation="10dp"
                       android:src="@drawable/win_cup" />

                   <com.google.android.material.card.MaterialCardView
                       android:id="@+id/materialCardView"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-25dp"
                       app:cardCornerRadius="10dp"
                       app:cardElevation="0dp">

                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@color/score_card"
                           android:paddingHorizontal="10dp"
                           android:paddingTop="20dp"
                           android:paddingBottom="10dp">
                           <com.google.android.material.textview.MaterialTextView

                               style="@style/PopinsMedium16.DarkBrown"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="18sp"
                               android:layout_marginTop="10dp"
                               android:text="@string/total_points" />

                           <com.google.android.material.textview.MaterialTextView
                               android:id="@+id/tvPoints"
                               style="@style/PopinsBold30.DarkBrown"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="24sp"
                               android:text="@{viewModel.totalPoints}"
                               android:includeFontPadding="false"
                               app:layout_constraintTop_toBottomOf="@id/pharmacyIcon"
                               tools:text="3" />
                       </LinearLayout>
                   </com.google.android.material.card.MaterialCardView>

               </LinearLayout>
               <com.google.android.material.card.MaterialCardView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/lTotalPoints"
                   android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="20dp"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="0dp">
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:padding="18dp"
                       android:background="@color/score_card"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:id="@+id/ivIconTimer"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/gold_star"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent" />

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/tvlblTimeBreakdown"
                           style="@style/PopinsBold24"
                           android:layout_width="0dp"
                           android:layout_height="0dp"
                           android:layout_marginStart="10dp"
                           android:gravity="center"
                           android:includeFontPadding="false"
                           android:text="@string/wait_time_breakdown"
                           android:textColor="@color/darkBrown"
                           app:layout_constraintBottom_toBottomOf="@+id/ivIconTimer"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toEndOf="@+id/ivIconTimer"
                           app:layout_constraintTop_toTopOf="@+id/ivIconTimer" />

                       <TextView
                           android:id="@+id/waitTimeValue"
                           style="@style/NunitoSansSemiBold16.Grey700"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:customerWaitTime="@{viewModel.customerArrivalTime}"
                           app:isDugOrder="@{false}"
                           android:padding="10dp"
                           android:background="@drawable/bg_time_selector"
                           android:textColor="@color/white"
                           app:layout_constraintHorizontal_bias="0"
                           app:layout_constraintEnd_toEndOf="@+id/tvlblTimeBreakdown"
                           app:layout_constraintStart_toStartOf="@+id/tvlblTimeBreakdown"
                           app:layout_constraintTop_toBottomOf="@+id/ivIconTimer"
                           app:otpCapturedOrBypassTime="@{viewModel.otpCapturedOrByPassTime}"
                           tools:text="2m 3s" />

                   </androidx.constraintlayout.widget.ConstraintLayout>

               </com.google.android.material.card.MaterialCardView>
           </androidx.constraintlayout.widget.ConstraintLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</layout>